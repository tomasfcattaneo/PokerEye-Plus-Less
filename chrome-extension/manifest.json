{
  "manifest_version": 3,
  "version": "2.0.0",
  "name": "PokerEye-Plus-Less for Ignition Casino",
  "description": "Advanced poker assistant with GTO recommendations, Monte Carlo equity, range-based analysis, and intelligent caching",
  "icons": {
    "16": "resources/logo_16.png",
    "48": "resources/logo_48.png",
    "128": "resources/logo_128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.ignitioncasino.eu/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.ignitioncasino.eu/*"],
      "run_at": "document_idle",
      "js": ["attribution.js", "pokersolver.js", "main.js"]
    }
  ]
}
